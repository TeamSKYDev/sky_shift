<tr>
	<td><%= link_to task.title, task_path(task), remote: true %></td>
	<td><%= task.content %></td>
	<td>
		<% user = User.find(task.creator_id) %>
		<%= user.last_name %>
	</td>
	<td><%= task.updated_at.strftime("%m/%d %H:%M") %></td>
	<td>
		<% if task.is_announced == true %>
			<label>公開</label>
		<% else %>
			<label>非公開</label>
		<% end %>
	</td>
	<td><%= link_to "割り当て", new_user_task_path(id: task.id), remote: true %></td>
	<td><%= link_to "編集", edit_task_path(task), remote: true %></td>
</tr>