<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
        <h5 class="modal-title">
            タスク詳細
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <lavel>タイトル：</lavel><%= task.title %><br>
        <lavel>内容：</lavel><%= task.content %><br>
        <label>公開範囲：</label>
        <% if task.is_announced == true %>
            公開
        <% else %>
            非公開
        <% end %>
        <br>
        <label>作成者：</label>
        <% user = User.find(task.creator_id) %>
        <%= user.last_name %><br>
        <label>最終更新日：</label><%= task.updated_at.strftime("%y/%m/%d %H:%M") %>
    </div>
    <div class="modal-footer actions">
        <% user_task = task.user_tasks.find_by(user_id: current_user.id, is_completed: :false) %>
        <% if user_task.present? %>
            <%= link_to "済", user_task_path(user_task.id), method: :patch, class: "btn btn-outline-success" %>
        <% end %>
    </div>
  </div>
</div>