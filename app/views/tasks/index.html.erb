<h3><%= link_to @store.name, store_path(@store) %> タスク一覧ページ</h3>

<%= link_to "新規タスクの作成", new_task_path, remote: true %>

<h4>タスク一覧</h4>
<table class = "table" id = "add_task">
	<tr>
		<th>タイトル</th>
		<th>内容</th>
		<th>作成者</th>
		<th>最終編集日時</th>
		<th></th>
	</tr>

	<% @tasks.each do |task| %>
		<tr>
			<td><%= task.title %></td>
			<td><%= task.content %></td>
			<td>
				<% user = User.find(task.creatore_id) %>
				<%= user.last_name %>
			</td>
			<td><%= task.updated_at.strftime("%m/%d %H:%M") %></td>
			<td><%= link_to "編集", edit_task_path(task) %></td>
		</tr>
	<% end %>
	
</table>

<div id = "task_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
