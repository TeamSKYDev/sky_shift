<h2>過去の完了タスク</h2>

<div class = "private-task">
	<table class = "table" style="table-layout:fixed;">
		<% @user_tasks.each do |user_task| %>
			<tr>
				<td style = "width: 20%">
					<% store = Store.find(user_task.task.store.id) %>
					<%= store.name %>
				</td>

				<td style = "width: 20%"><%= link_to user_task.task.title, task_path(user_task.task.id), remote: true %></td>
				<td style = "width: 30%"><%= user_task.task.content %></td>

				<td style = "width: 30%">
					<%= user_task.updated_at.strftime("%m/%d")+" 済" %>
				</td>
			</tr>
		<% end %>
	</table>
</div>

<br><br>
<%= link_to "戻る", user_tasks_path %>

<div id = "task_show_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>