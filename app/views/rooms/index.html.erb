<p>トークルーム</p>
<ul class="list-group">
  <% @rooms.each do |room| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
    <% if room.name.present? %>
        <%= link_to room.name, room_messages_path(room) %>
    <% else %>
        <%= link_to room.default_name(current_user), room_messages_path(room) %>
    <% end %>
    </li>
<% end %>
</ul>
