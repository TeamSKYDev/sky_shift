<% if @staff.is_admin == true %>
	<% if @unrelated_staffs.present? %>
		<p class = "alert alert-primary" role="alert">申請が　<%= @unrelated_staffs.count %>件届いています　　<%= link_to "確認", unrelated_staff_path(@store.id), remote: true, class: "text-secondary" %></p>
	<% end %>

	<div class = "row">
		<div class = "col-3">
			店舗名
		</div>
		<div class = "col">
			<%= @store.name %> <%= link_to "", edit_store_path(@store), remote: true, class: "fas fa-edit text-secondary", style: "font-size: 1.0rem;"%>
		</div>

	</div>
	<br>
	<div class = "row">
		<div class = "col-5">
			<div class="btn-group-vertical w-100" role="group" aria-label="Basic example">
			  <%= link_to "承認コード", uuid_path(@store), remote: true, class: "btn btn-outline-secondary" %>
			  <%= link_to "ラベル管理", labels_path, class: "btn btn-outline-secondary" %>
			  <%= link_to "タスクの管理", tasks_path, class: "btn btn-outline-secondary" %>
			  <%= link_to "スタッフ一覧", staffs_path, class: "btn btn-outline-secondary" %>
			</div>
		</div>
		<div class = "col"></div>
	</div>

	<div id="store-edit-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
	<div id="unrelated_staff-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
	<div id="uuid-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<% else %>
	<p>権限がありません。管理者から権限をもらってください。</p>
<% end %>