<h1 style = "font-size: 1.5rem;">新規登録</h1>
<br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class = "row">
    <div class = "col"></div>
    <div class = "col">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class = "col"></div>
  </div>

  <div class = "field">
      <label>名前</label><br>
      <%= f.text_field :last_name, autofocus: true, placeholder: "姓" %><%= f.text_field :first_name, placeholder: "名" %>
  </div>


  <div class = "field">
      <%= f.label :email %><br>
      <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
      <%= f.label :password %><br>
      <% if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: @minimum_password_length.to_s + "文字以上" %>
      <% else %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      <% end %>
  </div>

  <div class="field">
      <label>確認用</label><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-light" %>
  </div>
<% end %>

<br><br>

