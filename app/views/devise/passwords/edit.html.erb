<h2>パスワードの再設定</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %><br />
    <% if @minimum_password_length %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: @minimum_password_length.to_s + "文字以上" %>
    <% else %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    <% end %>

  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードの再設定", class: "btn btn-light" %>
  </div>
<% end %>

<br><br>
<%= link_to "新規登録", new_user_registration_path %>
<br><br><br>
<%= link_to "ログイン", new_user_session_path %>
