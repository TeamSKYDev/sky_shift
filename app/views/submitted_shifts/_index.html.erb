<div class="modal-dialog">
    <div class="modal-content">

		<div class="modal-header">
			<h4>シフト提出確認</h4>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="modal-body">
			<label>提出先　：　</label><%= store.name %><br>
			<% if shifts.present? %>
				<% shifts.each do |shift| %>
					<%= link_to edit_submitted_shift_path(shift), remote: true do %>
						<%= shift.start_time.strftime("%m/%d-%H:%M") + "　~　" + shift.end_time.strftime("%m/%d-%H:%M") %><br>
					<% end %>
				<% end %>
			<% else %>
				<p>提出するシフトが登録されていません</p>
			<% end %>
		</div>

		<div class="modal-footer actions">
			<% if shifts.present? %>
				<%= link_to "シフトを提出する", submit_shift_path(start_date: params[:start_date]), method: :patch, data: { confirm: '提出すると削除できなくなります。提出してよろしいですか？' }, class: "btn btn-success" %>
			<% end %>
		</div>

    </div>
</div>